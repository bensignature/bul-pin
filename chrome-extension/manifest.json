{
  "manifest_version": 3,
  "name": "Pinterest Extension",
  "version": "1.0.0",
  "description": "Save images from any webpage to your Pinterest boards",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8001/*",
    "https://api.pinterest.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pinterest Extension"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/*", "styles/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}